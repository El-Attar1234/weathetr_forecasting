<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.design.CurrentDesign"
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
       android:elevation="20dp"
        android:backgroundTint="@color/material_blue"
        app:cardBackgroundColor="@color/material_blue"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_View_Hour_Of_Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                style="@style/TextViewInColoredCard"
                android:text='12:00'
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                tools:text="14:00" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_View_Forecast_Icon_per_Hour"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/text_View_Hour_Of_Day"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_mostly_cloudy" />

            <TextView
                android:layout_gravity="center_horizontal"
                style="@style/TextViewInColoredCard"
                android:id="@+id/textViewTemp_per_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_View_Forecast_Icon_per_Hour"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text='27C' />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
